<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" Title="Page1" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="ControlTemplatesLearning.Page1" 
    ControlTemplate="{StaticResource ThemeMaster}">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand">
            <Label Text="Registration Page">
            </Label>
            <Entry Text="Name">
            </Entry>
            <Entry Text="Age">
            </Entry>
            <Entry Text="Address">
            </Entry>
            <Entry Text="Country">
            </Entry>
            <Button Text="Submit" BackgroundColor="Black">
            </Button>
            <Button Text="Theme Master" Clicked="Handle_Master_Clicked"></Button>
            <Button Text="Theme Blue" Clicked="Handle_Blue_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>